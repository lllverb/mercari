= render '././shared/header'
.mypage-area
  .mypage__content
    .mypage--left
      =render "side_bar"
    .mypage--right
      .my-page-container
        .my-page-container
          .my-page-container--upper
            %h2 クレジットカード情報入力
          .my-page-container--lower
            .form
              .form__card
                .form__card--upper.null-null
                  %h5 カード番号
                  %span.null-false 必須
                .form__card--center
                  %input{placeholder: "半角数字のみ"}
                .form__card--lower
                  -# = image_tag "credit-cards", height: "18"
              .form__deadlile
                .form__deadlile--upper.null-null
                  %h5 有効期限
                  %span.null-false 必須
                .form__deadlile--lower
                  .select-month
                    %select{name: "month"}>
                      %option{value: ""} -
                      %option{value: "1"} 1
                      %option{value: "2"} 2
                      %option{value: "3"} 3
                      %option{value: "4"} 4
                      %option{value: "5"} 5
                      %option{value: "6"} 6
                      %option{value: "7"} 7
                      %option{value: "8"} 8
                      %option{value: "9"} 9
                      %option{value: "10"} 10
                      %option{value: "11"} 11
                      %option{value: "12"} 12
                      月
                  .select-year
                    %select{name: "year"}>
                      %option{value: ""} -
                      %option{value: "19"} 19
                      %option{value: "20"} 20
                      %option{value: "21"} 21
                      %option{value: "22"} 22
                      %option{value: "23"} 23
                      %option{value: "24"} 24
                      %option{value: "25"} 25
                      %option{value: "26"} 26
                      %option{value: "27"} 27
                      %option{value: "28"} 28
                      %option{value: "29"} 29
                      年
              .form__cvc
                .form__cvc--upper.null-null
                  %h5 セキュリティコード
                  %span.null-false 必須
                .form__cvc--center
                  %input{placeholder: "カード背面4桁もしくは3桁の番号"}
                .form__cvc--lower
                  -# font-awesomeいれる...............................
                  %span ?
                  %h6 カード裏面の番号とは？
              .form__button
                %button.button 追加する
